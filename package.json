{
  "name": "tienda-pantalones",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:prod": "NODE_ENV=production next dev",
    "build": "npx prisma generate && next build",
    "build:prod": "NODE_ENV=production npx prisma generate && next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "create:admin": "tsx scripts/create-admin.ts",
    "create:admin:prod": "NODE_ENV=production tsx scripts/create-admin.ts",
    "db:generate": "npx prisma generate",
    "db:migrate": "dotenv -e .env.local -- npx prisma migrate dev",
    "db:migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy",
    "db:migrate:status": "dotenv -e .env.local -- npx prisma migrate status",
    "db:migrate:status:prod": "dotenv -e .env.production -- npx prisma migrate status",
    "db:reset": "dotenv -e .env.local -- npx prisma migrate reset",
    "db:reset:prod": "dotenv -e .env.production -- npx prisma migrate reset --force",
    "db:studio": "dotenv -e .env.local -- npx prisma studio",
    "db:studio:prod": "dotenv -e .env.production -- npx prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed:prod": "NODE_ENV=production tsx scripts/seed.ts"
  },
  "dependencies": {
    "@casl/ability": "6.7.3",
    "@casl/react": "5.0.0",
    "@prisma/client": "6.4.0",
    "@react-email/components": "0.0.38",
    "bcrypt": "5.1.1",
    "date-fns": "4.1.0",
    "date-fns-tz": "^3.2.0",
    "dayjs": "1.11.13",
    "dotenv": "^16.5.0",
    "formik": "2.4.6",
    "next": "15.1.7",
    "next-auth": "5.0.0-beta.25",
    "next-intl": "4.0.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "react-icons": "5.5.0",
    "resend": "^4.2.0",
    "short-uuid": "5.2.0",
    "stripe": "17.7.0",
    "uuid": "9.0.0",
    "yup": "1.6.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
    "@types/bcrypt": "5.0.2",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "@types/uuid": "9.0.0",
    "daisyui": "4.12.24",
    "dotenv-cli": "^8.0.0",
    "eslint": "9",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "postcss": "8.5.3",
    "prettier": "3.2.4",
    "prisma": "6.4.0",
    "react-email": "4.0.11",
    "tailwindcss": "3.4.17",
    "tsx": "^4.20.2",
    "typescript": "5"
  }
}
