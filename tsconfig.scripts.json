{
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    }
  }
}
